@model IEnumerable<JustBlog.ViewModels.Role.ListRoleVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Manager User</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                @foreach (var claim in @item.Claims)
                {
                    <small>@claim</small><br>
                }
            </td>   
            <td>
               
                <div class="row">
                    <div class="col-1 d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-warning" asp-route-roleid="@item.Id">Edit</a>
                    </div>
                    <div class="col-1">
                        <a asp-action="Details" class="btn btn-info" asp-route-roleid="@item.Id">Detail               </a>
                    </div>
                    <div class="col-1">
                        <form asp-action="Delete" asp-route-roleid="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                            Delete
                            </button>
                        </form>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
