@model IEnumerable<JustBlog.Models.Entities.Post>

@{ ViewData["Title"] = "Index";
    int i = 0; }

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<strong> Number of Post: @ViewBag.postsTotal</strong>
<table id="tbdata" class="table table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlSlug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>Tag</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>  @(++ViewBag.postIndex)</td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UrlSlug)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShortDescription)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Published)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @string.Join(", ", item.PostTagMaps.Select(pt => pt.Tag.Name))
    </td>
    <td>
        <a class="btn btn-info mb-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <a class="btn btn-success mb-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                Delete
            </button>
        </form>
    </td>
</tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tbdata').DataTable();
        })

        $('#tbdata').dataTable({
            "paging": false
        });
    </script>
}
<partial name="_Paging" model="@ViewBag.pagingModel" />