@model AddUserRoleVM
@{
    ViewData["Title"] = "Assign role";
}

<h4>Set role for user: @Model.User.UserName</h4>


<div class="row">
    <div class="col-md-6">
        <form id="add-role-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, (IEnumerable<SelectListItem>)ViewBag.allRoles, new
                {
                    id = "id-select-roles",
                    @class = "w-100"
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-action="Index">List User</a>
        </form>
        <hr>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}