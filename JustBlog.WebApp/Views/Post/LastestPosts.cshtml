
@model IEnumerable<JustBlog.ViewModels.EntityViewModels.LastestPostVM>

<div class="card" style="width: 18rem;">
    <img src="/cleanblog/assets/img/no1.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h6 class="card-title">Lastest Post</h6>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <li class="list-group-item border-bottom">@Html.DisplayFor(modelItem => item.Title)</li>
        }
    </ul>
</div>