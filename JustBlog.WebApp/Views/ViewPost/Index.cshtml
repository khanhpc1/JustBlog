@model IEnumerable<JustBlog.ViewModels.EntityViewModels.ListPostVM>

@{
    ViewData["Title"] = "Index";
}
<partial name="_PartialHeader" />
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            @foreach (var item in Model)
            {

                <!-- Post preview-->
                <div class="post-preview">
                    <a asp-controller="ViewPost" asp-action="Details" asp-route-id="@item.Id">
                    <h2 class="post-title">
                        @Html.DisplayFor(modelItem => item.Title)</h2></a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">Start Bootstrap</a>
                        @Html.DisplayFor(modelItem => item.PostedOn)
                    </p>
                    <p class="post-meta">
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </p>
                </div>
                <hr class="my-4" />
            }
            <partial name="_paging" model="@ViewBag.pagingModel" />
            <!-- Pager-->
        </div>
    </div>
</div>